---
import MainLayout from '@/layouts/MainLayout.astro';
import ContactPage from '@/views/Contact';
import { contactInfo } from '@/data/content';

const title = "İletişim | İstanbul Kartal Avukat, Ağır Ceza & Boşanma Yeri - RS Avukatlık";
const description = "Av. Ramazan Şimşek ile görüşmek ve Kartal'daki ofisimizi ziyaret etmek için RS Avukatlık iletişim bilgileri, adres ve telefon detayları.";
const canonical = "https://www.rsavukatlik.com/iletisim";

const schema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": title,
  "description": description,
  "mainEntity": {
      "@type": "LegalService",
      "name": "RS Avukatlık",
      "telephone": contactInfo.phone,
      "email": contactInfo.email, 
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Cevizli Mah. Mustafa Kemal Cad. Hukukçular Towers A Blok No: 66 K: 18 D: 180",
        "addressLocality": "Kartal",
        "addressRegion": "İstanbul",
        "postalCode": "34865",
        "addressCountry": "TR"
      }
  }
};
---

<MainLayout title={title} description={description} canonical={canonical} schema={schema}>
  <ContactPage client:load />
</MainLayout>
