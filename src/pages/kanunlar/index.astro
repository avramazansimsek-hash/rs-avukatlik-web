---
import MainLayout from '../../layouts/MainLayout.astro';
import KanunBooks from '../../views/pages/KanunBooks';

const title = "Kanunlar & Mevzuat | RS Avukatlık";
const description = "Güncel Türk Hukuku mevzuatı, tüm kanunlar, detaylı hukuki incelemeler, avukat görüşleri ve yargı kararları.";
const canonical = "https://www.rsavukatlik.com/kanunlar";

const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": title,
  "description": description,
  "url": canonical,
  "provider": {
    "@type": "LegalService",
    "name": "RS Avukatlık"
  }
};
---

<MainLayout title={title} description={description} canonical={canonical} schema={schema}>
  <KanunBooks client:load />
</MainLayout>
