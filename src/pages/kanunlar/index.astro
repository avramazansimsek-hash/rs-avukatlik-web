---
import MainLayout from '../../layouts/MainLayout.astro';
import KanunlarPage from '../../views/pages/Kanunlar';
import { getAllTck } from '../../lib/kanunlar';

const laws = await getAllTck();

const title = "Kanunlar & Mevzuat | RS Avukatlık";
const description = "Güncel Türk Ceza Kanunu (TCK) maddeleri, detaylı hukuki incelemeler, avukat görüşleri ve yargı kararları.";
const canonical = "https://www.rsavukatlik.com/kanunlar";

const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": title,
  "description": description,
  "url": canonical,
  "provider": {
    "@type": "LegalService",
    "name": "RS Avukatlık"
  }
};
---

<MainLayout title={title} description={description} canonical={canonical} schema={schema}>
  <KanunlarPage client:load initialLaws={laws} />
</MainLayout>
