---
import MainLayout from '@/layouts/MainLayout.astro';
import RegionalView from '@/views/pages/RegionalView';
import { regions } from '@/data/regions';

const regionId = 'kartal-ceza';
const data = regions[regionId];

const title = data?.title || 'Kartal Ceza Avukatı - RS Avukatlık';
const description = data?.description || 'Kartal Ceza Avukatı olarak ağır ceza ve asliye ceza davalarında hizmet veriyoruz.';
const canonical = `/${data?.slug}`;
---

<MainLayout title={title} description={description} canonical={canonical}>
  <RegionalView regionId={regionId} />
</MainLayout>
